{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "module": "es6",
        "jsx": "react",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
    },
    "exclude": [
        "node_modules"
    ],
    "references": [],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "paths": {
        "*": [
            "*",
            "src/*"
        ]
    },
}